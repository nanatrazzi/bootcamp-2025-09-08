    }
],

  "paths": {
    "/user_profile_details/{id}": {
      "get": {
        "tags": ["colaboradores"],
        "summary": "Get User Profile",
        "description": "Retorna os dados do colaborador a partir do ID.",
        "operationId": "userProfileDetails",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer", "title": "Id" }
          }
        ],
        "responses": {
          "200": { "description": "Successful Response", "content": { "application/json": { "schema": {} } } },
          "422": {
            "description": "Validation Error",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/HTTPValidationError" } } }
          }
        }
      }
    },
    "/time-off-balance/{id}": {
      "get": {
        "tags": ["colaboradores"],
        "summary": "Get Time Off Balance",
        "description": "Consulta o saldo de folgas de um colaborador pelo ID.",
        "operationId": "getTimeOffBalance",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer", "title": "Id" }
          }
        ],
        "responses": {
          "200": { "description": "Successful Response", "content": { "application/json": { "schema": {} } } },
          "422": {
            "description": "Validation Error",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/HTTPValidationError" } } }
          }
        }
      }
    },
    "/request-time-off": {
      "post": {
        "tags": ["colaboradores"],
        "summary": "Request Time Off",
        "description": "Registra uma solicitação de folga, descontando do saldo de folgas.",
        "operationId": "requestTimeOffBalance",
        "requestBody": {
          "content": {
            "application/json": { "schema": { "$ref": "#/components/schemas/SolicitarFolgaRequest" } }
          },
          "required": true
        },
        "responses": {
          "200": { "description": "Successful Response", "content": { "application/json": { "schema": {} } } },
          "422": {
            "description": "Validation Error",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/HTTPValidationError" } } }
          }
        }
      }
    },
    "/update-title": {
      "put": {
        "tags": ["colaboradores"],
        "summary": "Update Title",
        "description": "Atualiza o cargo de um colaborador com base no ID.",
        "operationId": "updateTitle",
        "requestBody": {
          "content": {
            "application/json": { "schema": { "$ref": "#/components/schemas/AtualizarCargoRequest" } }
          },
          "required": true
        },
        "responses": {
          "200": { "description": "Successful Response", "content": { "application/json": { "schema": {} } } },
          "422": {
            "description": "Validation Error",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/HTTPValidationError" } } }
          }
        }
      }
    },
    "/update-address": {
      "put": {
        "tags": ["colaboradores"],
        "summary": "Update Address",
        "description": "Atualiza o endereço de um colaborador com base no ID.",
        "operationId": "updateAddress",
        "requestBody": {
          "content": {
            "application/json": { "schema": { "$ref": "#/components/schemas/AtualizarEnderecoRequest" } }
          },
          "required": true
        },
        "responses": {
          "200": { "description": "Successful Response", "content": { "application/json": { "schema": {} } } },
          "422": {
            "description": "Validation Error",
            "content": { "application/json": { "schema": { "$ref": "#/components/schemas/HTTPValidationError" } } }
          }
        }
      }
    },
    "/health": {
      "get": {
        "summary": "Health",
        "description": "Verifica o status de saúde da aplicação.\nRetorna uma resposta simples indicando que o serviço está funcionando.",
        "operationId": "health_health_get",
        "responses": {
          "200": { "description": "Successful Response", "content": { "application/json": { "schema": {} } } }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "AtualizarCargoRequest": {
        "properties": {
          "id": { "type": "string", "title": "Id" },
          "novo_cargo": { "type": "string", "title": "Novo Cargo" }
        },
        "type": "object",
        "required": ["id", "novo_cargo"],
        "title": "AtualizarCargoRequest"
      },
      "AtualizarEnderecoRequest": {
        "properties": {
          "id": { "type": "string", "title": "Id" },
          "novo_endereco": { "type": "string", "title": "Novo Endereco" }
        },
        "type": "object",
        "required": ["id", "novo_endereco"],
        "title": "AtualizarEnderecoRequest"
      },
      "Body_import_users_import_users__post": {
        "properties": {
          "file": { "type": "string", "format": "binary", "title": "File" }
        },
        "type": "object",
        "title": "Body_import_users_import_users__post"
      },
      "CriarColaboradorRequest": {
        "properties": {
          "nome": { "type": "string", "title": "Nome" },
          "saldo_folgas_dias": { "type": "number", "title": "Saldo Folgas Dias" },
          "cargo": { "type": "string", "title": "Cargo" },
          "endereco": { "type": "string", "title": "Endereco" }
        },
        "type": "object",
        "required": ["nome", "saldo_folgas_dias", "cargo", "endereco"],
        "title": "CriarColaboradorRequest"
      },
      "HTTPValidationError": {
        "properties": {
          "detail": {
            "items": { "$ref": "#/components/schemas/ValidationError" },
            "type": "array",
            "title": "Detail"
          }
        },
        "type": "object",
        "title": "HTTPValidationError"
      },
      "SolicitarFolgaRequest": {
        "properties": {
          "id": { "type": "string", "title": "Id" },
          "data_inicio": { "type": "string", "title": "Data Inicio" },
          "data_fim": { "type": "string", "title": "Data Fim" }
        },
        "type": "object",
        "required": ["id", "data_inicio", "data_fim"],
        "title": "SolicitarFolgaRequest"
      },
      "ValidationError": {
        "properties": {
          "loc": {
            "items": { "anyOf": [{ "type": "string" }, { "type": "integer" }] },
            "type": "array",
            "title": "Location"
          },
          "msg": { "type": "string", "title": "Message" },
          "type": { "type": "string", "title": "Error Type" }
        },
        "type": "object",
        "required": ["loc", "msg", "type"],
        "title": "ValidationError"
      }
    }
  }
}